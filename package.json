{
  "name": "larsworld",
  "version": "0.1.0",
  "type": "module",
  "description": "A world generation game inspired by Dwarf Fortress and Minecraft.",
  "main": "dist/index.js",
  "scripts": {
    "start": "node --loader ts-node/esm src/server/local.ts",
    "build": "tsc",
    "test": "npm run test:e2e",
    "test:unit": "node tests/unit-map-generation.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:preview": "node scripts/test-e2e-preview.js",
    "test:install": "playwright install",
    "test:report": "playwright show-report",
    "generate:screenshots": "node scripts/generate-map-screenshots.js",
    "post-pr-comment": "node scripts/post-pr-comment.cjs"
  },
  "keywords": [
    "game",
    "world-generation",
    "typescript"
  ],
  "author": "LarsDenBakker",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^20.12.12",
    "netlify-cli": "^22.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "serverless-http": "^3.2.0"
  }
}
