{
  "name": "larsworld",
  "version": "0.1.0",
  "type": "module",
  "description": "A world generation game inspired by Dwarf Fortress and Minecraft.",
  "main": "dist/index.js",
  "scripts": {
    "start": "node --loader ts-node/esm src/server/local.ts",
    "dev": "concurrently \"npm run start\" \"npm run dev:web\"",
    "dev:web": "web-dev-server --config web-dev-server.config.js",
    "build": "tsc",
    "test": "npm run test:unit && npm run test:unit:components && npm run test:e2e",
    "test:unit": "node test/world-generator-tests.js",
    "test:performance": "node test/performance-tests.js",
    "test:unit:components": "web-test-runner --config web-test-runner.config.js",
    "test:generate-pngs": "node test/stable-seed-pngs.js",
    "test:verify-pngs": "node scripts/verify-stable-pngs.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:preview": "node scripts/test-e2e-preview.js",
    "test:install": "playwright install",
    "test:report": "playwright show-report",
    "post-pr-comment": "node scripts/post-pr-comment.cjs"
  },
  "keywords": [
    "game",
    "world-generation",
    "typescript"
  ],
  "author": "LarsDenBakker",
  "license": "ISC",
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@open-wc/testing": "^4.0.0",
    "@playwright/test": "^1.54.1",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^20.12.12",
    "@web/dev-server": "^0.4.6",
    "@web/dev-server-esbuild": "^1.0.4",
    "@web/dev-server-rollup": "^0.6.4",
    "@web/test-runner": "^0.20.2",
    "concurrently": "^9.2.0",
    "netlify-cli": "^22.4.0",
    "node-fetch": "^3.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "lit": "^3.3.1",
    "serverless-http": "^3.2.0",
    "sharp": "^0.34.3"
  }
}
