{
  "name": "larsworld",
  "version": "0.1.0",
  "type": "module",
  "description": "A world generation game inspired by Dwarf Fortress and Minecraft.",
  "main": "dist/index.js",
  "scripts": {
    "start": "node --loader ts-node/esm src/server/local.ts",
    "dev": "concurrently \"npm run start\" \"npm run dev:web\"",
    "dev:web": "vite",
    "build": "npm run build:server && npm run build:web",
    "build:server": "tsc",
    "build:web": "vite build",
    "preview": "vite preview",
    "test": "npm run test:unit && npm run test:unit:components && npm run test:e2e",
    "test:unit": "node test/world-generator-tests.js",
    "test:performance": "node test/performance-tests.js",
    "test:unit:components": "vitest run",
    "test:components:dev": "vitest",
    "test:generate-pngs": "node test/stable-seed-pngs.js",
    "test:verify-pngs": "node scripts/verify-stable-pngs.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:preview": "node scripts/test-e2e-preview.js",
    "test:install": "playwright install",
    "test:report": "playwright show-report",
    "generate:biome-pngs": "node scripts/generate-biome-pngs.js",
    "post-pr-comment": "node scripts/post-pr-comment.cjs"
  },
  "keywords": [
    "game",
    "world-generation",
    "typescript"
  ],
  "author": "LarsDenBakker",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.2.0",
    "jsdom": "^25.0.1",
    "netlify-cli": "^22.4.0",
    "node-fetch": "^3.3.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite": "^5.4.1",
    "vitest": "^2.1.1"
  },
  "dependencies": {
    "canvas": "^2.11.2",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "serverless-http": "^3.2.0",
    "sharp": "^0.34.3"
  }
}
